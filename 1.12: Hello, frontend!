                                                                        
FROM node:latest

EXPOSE 5000

COPY . .

RUN curl -sL https://deb.nodesource.com/setup_14.x | bash
RUN apt install -y nodejs

RUN node -v && npm -v

RUN npm install

RUN npm install -g serve

ENTRYPOINT ["serve", "-s", "-l", "5000", "build"]
